apiVersion: v1
kind: Secret
metadata:
  name: dynatrace-secret
  namespace: default
type: Opaque
stringData:
  # Replace with your actual Dynatrace API token (logs.ingest scope)
  # Get it from: Dynatrace → Settings → Integration → Dynatrace API → Generate token
  api-token: "YOUR_DYNATRACE_API_TOKEN_HERE"
  
  # Replace with your Dynatrace tenant
  # Example: vvz65479 (from vvz65479.live.dynatrace.com)
  tenant: "YOUR_TENANT_ID"
  
  # Dynatrace environment/domain
  # Example: live.dynatrace.com
  domain: "live.dynatrace.com"
